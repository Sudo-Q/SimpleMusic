<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/background_dialog"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/titleDialog"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/background_title_dialog"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/_404_not_found" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_below="@+id/titleDialog"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="65dp"
        android:text="@string/notFoundSongOnDivice"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_baseline_do_not_disturb_24" />

    <ImageButton
        android:id="@+id/directDownloadButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ic_baseline_download_24"
        android:textSize="18sp" />


</RelativeLayout>